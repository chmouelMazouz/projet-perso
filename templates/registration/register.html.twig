{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    <section id="reserve-image" class="v2 background-cover"  style="background-image: url('{{ asset('images/108.jpg')}}');" >
        <div class="container">
            <div class="row">
                <div class="col-xs-12">
                    <!-- MAIN TITLE WRAPPER -->
                    <div class="about-section-wraper text-center animated-element-1 delay1">

                        <h2>Inscription</h2>
                    </div>
                    <!-- END MAIN TITLE WRAPPER -->
                </div>
            </div>
        </div>
    </section>


    {{ form_start(registrationForm) }}
    <div class="controls">
        <div class="row text-left">
            <div class="col-md-4 ml-auto mr-auto"">
                <div class="form-group">
                    {{ form_row(registrationForm.email, { 'attr': {'class': 'form-control'} } ) }}
                </div>
            </div>
            <div class="col-md-4 ml-auto mr-auto"">
                <div class="form-group">
                    {{ form_row(registrationForm.plainPassword, { 'attr': {'class': 'form-control'} } ) }}
                </div>
            </div>
            <div class="col-md-4 ml-auto mr-auto"">
                <div class="form-group">
                    {{ form_row(registrationForm.agreeTerms) }}
                </div>
            </div>
        </div>
    </div>
    <div class="col-6  text-center">
        <div id="success">
            <button id="submit" type="submit" name="submit" class="btn btn-medium-rsvp btn-block">Sauvegarder <i class="fa fa-long-arrow-right" aria-hidden="true"></i></button>
        </div>
    </div>


    {{ form_end(registrationForm) }}
{% endblock %}

